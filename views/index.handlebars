<div class="row">
  <!-- Burgers REady -->
  <div class="col l6 center-align">
    <h5>Your Order:</h5>
    <ul>
      {{#each brgr}}
        {{#unless this.devoured}}
          <div class="card">
            <p class="grey-text">
              {{this.id}}. {{this.burger_name}}

              <form action="update/{{this.id}}?_method=PUT" method="POST">
                <input type="hidden" name="devoured" value="1">
                <button type="submit" class="waves-effect waves-light btn green">Munch Away</button>
              </form>
            </p>
          </div>
        {{/unless}}
      {{/each}}
    </ul>
  </div>

  <!-- Devoured Burgers -->
    <div class="col l6 center-align">
      <h5>Crushed Food:</h5>
      <ul>
        {{#each brgr}}
          {{#if this.devoured}}
            <div class="card">
              <p class="grey-text">
                {{this.id}}. {{this.burger_name}}

                <form action="delete/{{this.id}}?_method=DELETE" method="POST">
                  <button type="submit" class="waves-effect waves-light btn red lighten-2">Take Plates Away</button>
                </form>
              </p>
            </div>
          {{/if}}
        {{/each}}
      </ul>
    </div>
  </div>

  <br />

  <div class="row">
  <div class="col l12">
    <div class="card center-align">
    <!-- {takes menu.handlebars from partials and renders a drop down menu for menu -->
      {{> menu/dropdown}}
    </div>
  </div>
</div>
