<label>Order a Burger</label>
  <form action="/create" method="POST" class="button-size">
    <select name="burgerInput">
      <option value="" disabled selected>Choose a burger</option>

      {{#each itm}}
        {{#if entree}}
          <option value="{{this.item}}">{{this.item}}</option>
        {{/if}}
      {{/each}}

    </select>
    <br>
    <button type="submit" class="waves-effect waves-light btn light-blue darken-3">Add to Order</button>
  </form>

